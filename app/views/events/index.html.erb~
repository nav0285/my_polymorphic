<h1>Listing events</h1>
<% if @events.empty? %>
	<h2> No Events to display </h2>
<% else %>
	<table>
  	<tr>
  	  <th>Name</th>
  	  <th>Content</th>
  	  <th></th>
  	  <th></th>
 	 </tr>

		<% @events.each do |event| %>
  	<tr>
    	<td><%= event.name, event %></td>
   	  <td><%= event.content %></td>
    	<td><%= link_to 'Edit', edit_event_path(event) %></td>
    	<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
		<% end %>
</table>
<% end %>

